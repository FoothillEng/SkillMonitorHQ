generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum StudentLevel {
  LEVEL_1
  LEVEL_2
  LEVEL_3
}

model Project {
  id         Int      @id @default(autoincrement())
  name       String
  hours      Int
  startPath  DateTime
  endPath    DateTime
  assistants User[]   @relation("StudentProjects")
  owner      User     @relation("OwnedProjects", fields: [ownerId], references: [id])
  ownerId    String
}

model AllStudents {
  id        Int    @id @default(autoincrement())
  studentId Int    @unique
  firstName String
  lastName  String
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  studentId     Int          @unique
  firstName     String? // make it required
  lastName      String? // make it required
  avatar        String?
  sessions      Session[]
  hours         Int          @default(0)
  level         StudentLevel @default(LEVEL_1)
  lifetimeHours Int          @default(0)
  projectCount  Int          @default(0)
  projects      Project[]    @relation("StudentProjects")
  ownedProjects Project[]    @relation("OwnedProjects")
  admin         Boolean      @default(false)
}
